{
  "manifest_version": 3,
  "name": "Dan's Dark Mode Toggle",
  "version": "1.2",
  "description": "Apply a simple dark mode to Google Docs (and other websites if you want)",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
  "default_title": "Toggle Dark Mode"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
  
}
